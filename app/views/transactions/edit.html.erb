<p id="notice" style="color:red;"><%= flash[:notice] %></p>

<h1>Edit transaction</h1>

<%= form_for @transaction, url: {action: "update"} do |f| %>
	
  	<p><%= f.label(:description, "Description:") %>
  	<%= f.text_field(:description, :required => true) %>

  	<p><%= f.label(:date, "Date:") %>
  	<%= f.text_field(:date, :required => true) %>

  	<p><%= f.label(:amount, "Amount:") %>
  	<%= f.text_field(:amount, :required => true) %>

  	<p><%= f.label(:category, "Category:") %>
  	<%= f.text_field(:category, :required => true) %>

  	<p><%= f.label(:account_name, "Account Name:") %>
  	<%= f.text_field(:account_name, :required => true) %></p>

  	<p><%= f.label :budget_id %>
  	<%= f.select(:budget_id, Budget.all.map {|b| [b.name,b.id]}, :prompt => "Select a Budget") %></p>

	<%= f.submit("Update") %>
<% end %>